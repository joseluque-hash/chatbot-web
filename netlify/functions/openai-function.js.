const fetch = require('node-fetch');

exports.handler = async function(event, context) {
    const { prompt } = JSON.parse(event.body);

    const apiKey = 'sk-EW2UR1yGjKwB0GpCpDNjZVFM0JX8o3Ks3sXnWuidf6T3BlbkFJFrNlOS0uRi1zoqY8m38-B_wrk20mLATZqL3sGdLNYA';  // Replace with your OpenAI API Key

    const response = await fetch('https://api.openai.com/v1/completions', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
            'Authorization': `Bearer ${apiKey}`
        },
        body: JSON.stringify({
            model: "text-davinci-003",  // Or your preferred model
            prompt: prompt,
            max_tokens: 100
        })
    });

    const data = await response.json();

    return {
        statusCode: 200,
        body: JSON.stringify({ result: data.choices[0].text })
    };
};
